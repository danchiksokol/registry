{% extends 'base.html.twig' %}
{% use 'search/searchBar.html.twig' %}

{% block title %}Сохранение(изменение) участника{% endblock %}

{% block body %}
    {{ form_start(form) }}
    <div class="container">
        <table class="table table-hover table-bordered">
            <thead>
            </thead>
            <tbody>
            <tr>
                <td scope="col">Фамилия</td>
                <td><label for="textarea"></label>{{ form_widget(form.lastname) }}</td>
            </tr>
            <tr>
                <td scope="col">Имя</td>
                <td><label for="textarea"></label>{{ form_widget(form.firstname) }}</td>
            </tr>
            <tr>
                <td scope="col">Отчество</td>
                <td><label for="textarea"></label>{{ form_widget(form.middlename) }}</td>
            </tr>
            <tr>
                <td scope="col">Место работы</td>
                <td><label for="textarea"></label>{{ form_widget(form.job) }}</td>
            </tr>
            <tr>
                <td scope="col">Должность</td>
                <td><label for="textarea"></label>{{ form_widget(form.position) }}</td>
            </tr>
            <tr>
                <td scope="col">Телефон</td>
                <td><label for="textarea"></label>{{ form_widget(form.phone) }}</td>
            </tr>
            <tr>
                <td scope="col">Электронная почта</td>
                <td><label for="textarea"></label>{{ form_widget(form.email) }}</td>
            </tr>
            <tr>
                <td scope="col">Страна</td>
                <td><label for="textarea"></label>{{ form_widget(form.country) }}</td>
            </tr>
            <tr>
                <td scope="col">Город</td>
                <td><label for="textarea"></label>{{ form_widget(form.city) }}</td>
            </tr>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <tr>
                    <td scope="col">Пришел</td>
                    <td><label for="checkbox"></label>{{ form_widget(form.active) }}</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
        <div>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <button class="btn btn-warning" type="submit">Сохранить</button>
            {% else %}
                <button class="btn btn-warning" type="submit">Зарегестрировать</button>
            {% endif %}
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}